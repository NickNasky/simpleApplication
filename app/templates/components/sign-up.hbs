<div class="signupMessage {{if signupShow "hidden" ""}} {{if confirmShow "hidden" ""}}">
  <h2>Welcome to my application. Please click "Sign Up" to continue.</h2>
</div>

<div class="signupForms {{if signupShow "" "hidden"}} {{if confirmShow "hidden" ""}}">
  <div class="form-group">
    <label for="firstName" class="col-sm-3 control-label">First Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="firstName" placeholder="Please enter your first name" name="firstName" required>
    </div>
  </div>
  <div class="form-group">
    <label for="lastName" class="col-sm-3 control-label">Last Name</label>
    <div class="col-sm-8" required>
      <input type="text" class="form-control" id="lastName" placeholder="Please enter your last name" name="lastName" value={{lastName}} required>
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-3 control-label">Email Address</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="email" placeholder="Please enter your email address" name="email" required>
    </div>
  </div>
  <button type="submit" class="btn btn-default submit" {{action submitInfo}}>Submit</button>
</div>

<div class="confirmationPage {{if confirmShow "" "hidden"}}">
  <h2>Thank you for signing up, {{name}}!</h2>
</div>
